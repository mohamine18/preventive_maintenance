<% if (success) { %>
    <div class="alert alert-success mx-3 d-flex justify-content-between" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>    
<% } %>
<% if (error) { %>
    <div class="alert alert-danger mx-3 d-flex justify-content-between" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>    
<% } %>